<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S6Moviles.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana Login"
                   FontSize="24"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Contrasena"/>
            <Button x:Name="btnIniciar" Text="Iniciar Sesion" Clicked="btnIniciar_Clicked" />
            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>