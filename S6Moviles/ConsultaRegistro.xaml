<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S6Moviles.ConsultaRegistro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Listado"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <ListView x:Name="ListaEstudiante"  ItemSelected="OnSelection" >
                <ListView.ItemTemplate>

                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}" Detail="{Binding Usuario}"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
                
            </ListView>
            <Button x:Name="btnRegresar" Text="Regresar" Clicked="btnRegresar_Clicked"></Button>
            
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>